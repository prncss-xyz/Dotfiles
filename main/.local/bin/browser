#!/usr/bin/sh

if pgrep -x firefox; then
	firefox --new-window "$@"
	exit 0
fi

if pgrep -x chromium; then
	chromium --new-window "$@"
	exit 0
fi

# firefox "$@" &
chromium --enable-features=UseOzonePlatform --ozone-platform=wayland --remote-debugging-port=9222 "$@"
