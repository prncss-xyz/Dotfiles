#!/usr/bin/env sh

if [ -z "$1" ]; then
	echo "template name expected"
	exit 1
fi

TEMPLATE="$TEMPLATES/$1"
if [ ! -d "$TEMPLATE" ]; then
	echo "template $TEMPLATE does not exist."
	exit 1
fi

if [ -d "$TEMPLATE"/template ]; then
  cp -r "$TEMPLATE"/template/. .
fi

if [ -f "$TEMPLATE"/init ]; then
  "$TEMPLATE"/init
fi
