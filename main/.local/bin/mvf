#!/bin/env sh

inp="$1"
source=$(realpath "$inp")
FPATH="$inp"
FNAME=$(basename "$inp")
ext="${FNAME##*.}"
if [ -n "$ext" ]; then
	ext="$(printf "%s" "${ext}" | tr '[:upper:]' '[:lower:]')"
fi

case "${ext}" in
md | markdown)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

htm | html)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## text
pdf | doc | docx | epub)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

jpg | jpeg)
	cd "$(xdg-user-dir PICTURES)"
	history=pictures
	;;
esac

MIMETYPE="$(file -bL --mime-type -- "${FPATH}")"
case "${MIMETYPE}" in
inode/x-empty)
	exit 2
	;;

## DjVu
image/vnd.djvu)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## Image
image/*)
	cd "$(xdg-user-dir PICTURES)"
	history=pictures
	;;

## Text/html
text/html)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## PDF
application/pdf)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## Ebook
application/vnd.openxmlformats-officedocument.wordprocessingml.document | \
	application/x-mobipocket-ebook | \
	application/epub+zip)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## Text
text/*)
	cd "$(xdg-user-dir DOCUMENTS)"
	history=text
	;;

## Audio
audio/*)
	exit 3
	;;

## Video
video/*)
	exit 4
	;;
esac
if [ -z "$history" ]; then
	exit 4
fi

result="$(fd -t d -x echo '{}' | fzf --history=$HOME/.histories/$history --print-query | tail -1)"
if [ -n "$result" ]; then
	mkdir -p "$result"
	mv "$source" "$result"
	echo "$PWD/$result/$FNAME" >/tmp/mvf
fi
