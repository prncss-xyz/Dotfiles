#!/usr/bin/env sh

echo "$NVIM_LISTEN_ADDRESS"

if [ -z "$NVIM_LISTEN_ADDRESS" ]; then
  echo 0
  export NVIM_LISTEN_ADDRESS="/tmp/nvim-$$.sock"
fi
if [ -S "$NVIM_LISTEN_ADDRESS" ]; then
  echo nvim --server "$NVIM_LISTEN_ADDRESS" --remote imv-do.log
  nvim --server "$NVIM_LISTEN_ADDRESS" --remote imv-do.log
else
  echo exec "$TERMINAL" -e nvim --listen "$NVIM_LISTEN_ADDRESS" "$@"  &
  exec "$TERMINAL" -e nvim --listen "$NVIM_LISTEN_ADDRESS" "$@"  &
  # exec "$TERMINAL" -e nvr_start
fi

