#!/usr/bin/env sh

while true; do
	if [ -d ".git" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ -d ".stfolder" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ -d "node_modules" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ -f "stylua.toml" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ -d ".tags" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ "$PWD" = "$HOME" ]; then
		echo "$PWD"
		exit 0
	fi
	if [ "$PWD" = "/" ]; then
		echo "$PWD"
		exit 0
	fi
	cd ..
done
