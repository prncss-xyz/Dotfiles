#!/usr/bin/env sh

step() {
	# dir dir/name.ext dir/name.ext.esh
	echo "$1" "$2" "$3"
	mkdir -p ~/"$1"
	esh -o ~/"$2" "$3"
}
export -f step

source ~/.config/theming/theme/"$1"
# fd -H -e esh --base-directory ~/.config/theming/skeleton
fd -H -e esh --base-directory ~/.config/theming/skeleton -x sh -c 'step {//} {.} {}'

# fd -e esh --base-directory ~/.config/theming/skeleton -x bash -c 'mkdir -p ~/{//}; esh -o ~/{.} {}'
